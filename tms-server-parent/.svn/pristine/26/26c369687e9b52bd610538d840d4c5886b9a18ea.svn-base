	<servlet-mapping>
		<servlet-name>tms-log-mgr</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- 配置session超时时间，单位分钟 -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

	<jsp-config>
    	<taglib>
        	<taglib-uri>/tmstag</taglib-uri>
        	<taglib-location>/WEB-INF/classes/tmstag.tld</taglib-location>
    	</taglib>
	</jsp-config>
	<welcome-file-list>
		<welcome-file></welcome-file>
	</welcome-file-list>
</web-app>
