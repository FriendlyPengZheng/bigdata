<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.taomee.tms.mgr.dao.ServerDiaryInfoDao">
	<resultMap id="ServerDiaryInfoMap" type="com.taomee.tms.mgr.entity.ServerDiaryInfo">
		<id column="diary_id" property="diaryId" jdbcType="INTEGER" />
		<result column="curd" property="curd" jdbcType="INTEGER" />
		<result column="server_id" property="serverId" jdbcType="INTEGER" />
		<result column="server_name" property="serverName" jdbcType="VARCHAR" />
		<result column="parent_id" property="parentId" jdbcType="INTEGER" />
		<result column="game_id" property="gameId" jdbcType="INTEGER" />
		<result column="is_leaf" property="isLeaf"
			jdbcType="INTEGER" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<result column="add_time" property="addTime" jdbcType="TIMESTAMP"
			javaType="java.sql.Timestamp" />
	</resultMap>

	<sql id="ServerDiaryInfoColumnList">
		diary_id, curd, server_id, server_name, parent_id, game_id, is_leaf,
		status,add_time
	</sql>

	<insert id="insertServerDiaryInfo" parameterType="com.taomee.tms.mgr.entity.ServerDiaryInfo"
		useGeneratedKeys="true" keyProperty="diaryId">
		insert into
		t_server_diary_info
		(curd, server_id, server_name, parent_id, game_id, is_leaf, status)
		values
		(#{curd,jdbcType=INTEGER},#{serverId,jdbcType=INTEGER},#{serverName,jdbcType=VARCHAR},
		#{parentId,jdbcType=VARCHAR},
		#{gameId,jdbcType=VARCHAR},#{isLeaf,jdbcType=INTEGER},#{status,jdbcType=INTEGER})
	</insert>

	<select id="getServerDiaryInfoBydiaryId" resultMap="ServerDiaryInfoMap"
		parameterType="java.lang.Integer">
		select
		<include refid="ServerDiaryInfoColumnList" />
		from t_server_diary_info
		where diary_id &gt;
		#{diaryId,jdbcType=INTEGER} order by diary_id ASC
	</select>

	<select id="getServerDiaryInfoBylastId" resultMap="ServerDiaryInfoMap">
		select 
		<include refid="ServerDiaryInfoColumnList" />
		from t_server_diary_info order by diary_id desc  limit 1
	</select>

</mapper>