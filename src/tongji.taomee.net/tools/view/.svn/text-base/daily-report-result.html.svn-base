{extends "layout.html"}

{block "layout.subject"}{$subject}{/block}
{block "layout.css"}
body { font-family:"Microsoft YaHei"; }
{/block}
{block "layout.main"}
<table cellpadding="0" cellspacing="0" border="0">
    <tr>
        <td valign="top" align="center" style="padding-bottom:20px;font-size:16px;font-weight:bold;">日报时间：{$date}，计划发送{$totalCount}个，成功{$doneCount}个，异常{$errCount}个</td>
    </tr>
    {if $errEmail}
    <tr>
        <td valign="top" style="padding-bottom:20px;">
            <table cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td valign="top" style="color:red;font-size:15px;font-weight:bold;">异常日报：</td>
                </tr>
                {foreach $errEmail as $id => $val}
                <tr>
                    <td valign="top" style="padding-top:10px;font-weight:bold;">【{$id}】{$val.subject} {$val.err_desc}</td>
                </tr>
                {if isset($val.err_data) && $val.err_data}
                <tr>
                    <td valign="top" style="padding-left:2em;">
                        <table cellpadding="0" cellspacing="0" border="0">
                            {foreach $val.err_data as $v}
                            <tr>
                                <td valign="top">{$v.name}</td>
                                <td valign="top" style="padding-left:1em;">{$v.desc}</td>
                            </tr>
                            {/foreach}
                        </table>
                    </td>
                </tr>
                {/if}
                {/foreach}
            </table>
        </td>
    </tr>
    {/if}
    {if $doneEmail}
    <tr>
        <td valign="top">
            <table cellpadding="0" cellspacing="0" border="0" align="left" style="color:#333;">
                <tr>
                    <td valign="top" style="font-size:15px;">成功日报：</td>
                </tr>
                {foreach $doneEmail as $id => $val}
                <tr>
                    <td valign="top" style="font-size:14px;">【{$id}】{$val.subject}</td>
                </tr>
                {/foreach}
            </table>
        </td>
    </tr>
    {/if}
</table>
{/block}
