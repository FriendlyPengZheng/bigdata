<table cellpadding="0" cellspacing="0" align="center" class="table">
    <tr>
        <th colspan="6" valign="top">{$content.content_title}</th>
    </tr>
    <tr>
        <th valign="top">指标</th>
        <th valign="top">本月</th>
        <th valign="top">上月</th>
        <th valign="top">环比变化率</th>
        <th valign="top">去年同期</th>
        <th valign="top">同比变化率</th>
    </tr>
    {foreach $datas as $i => $data}
    <tr {if $i%2}
        style="background-color:#E8F8F7;"
        {/if}
    >
        <td valign="top">{$data['name']}</td>
        <td valign="top">{$data['today']}</td>
        <td valign="top">{$data['yesterday']}</td>
        <td valign="top">
            {if $data['yesterday_rate'] < -5}<span class="decrease">
            {elseif $data['yesterday_rate'] > 10}<span class="increase">
            {else}<span>
            {/if}{$data['yesterday_rate']}%</span>
        </td>
        <td valign="top">{$data['yearly']}</td>
        <td valign="top">
            {if $data['yearly_rate'] < -5}<span class="decrease">
            {elseif $data['yearly_rate'] > 10}<span class="increase">
            {else}<span>
            {/if}{$data['yearly_rate']}%</span>
        </td>
    </tr>
    {/foreach}
</table>
