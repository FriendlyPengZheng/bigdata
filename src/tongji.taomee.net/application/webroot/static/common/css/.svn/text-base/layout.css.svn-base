/**
 * Layout Style
 */
body { min-width: 1000px; }
.wrapper { position: relative; zoom: 1; }
.wrapper:before, .wrapper:after { content: "."; display: block; height: 0; overflow: hidden; }
.wrapper:after { clear: both; }

/* header */
.header { position: fixed; z-index: 10; width: 100%; }
.header .logo { float: left; padding-top: 4px; padding-left: 5px; }
.header .logo .tit { display: block; width: 170px; height: 29px; }
.header .logo .ir { display: none; }

.header .main-nav { height: 40px; margin-left: 24px; float: left; }
.header .main-nav li { float: left; padding-top: 4px; }
.header .main-nav li a { display: inline-block; height: 36px; line-height: 36px; text-decoration: none; padding: 0 20px; margin-left: 2px; }

.header .main-sub-nav { padding-left: 30px; height: 47px; line-height: 47px; }
.header .main-sub-nav >li { display: inline-block; vertical-align: middle;  }
.header .main-sub-nav li a { display: inline-block; text-decoration: none; padding: 0 20px; }

.header .links { position: absolute; right: 15px; top: 0; line-height: 40px; }
.header .links>li { float: left; padding: 0 5px; }

.main { padding-top: 87px; position: relative; z-index: 1; }
.main.with-no-sub { padding-top: 39px; }
.main.with-aside { padding-left: 180px; }

/* aside */
.main .aside { position: fixed; z-index: 1; top: 87px; left: 0; bottom: 0; width: 180px; overflow-x: hidden; overflow-y: auto; }
.main.with-no-sub .aside { top: 39px; }
.main .aside .child { height: 30px; line-height: 30px; }
.main .aside .aside-hide { position: absolute; top: -100px; right: 0; width: 9px; height: 50px; }

.main .content { margin-right: 10px; position: relative; padding: 10px 0px 40px 10px; }
.main .content .content-header { position: relative; z-index: 9; height: 36px; padding: 0 5px 10px 0; }
